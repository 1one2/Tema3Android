<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.FirstFragment"
    android:padding="10sp"
    android:background="@color/background">

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/titleET"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Title: "
        android:textSize="30sp"
        android:textColor="@color/white"
        />
    <EditText
        android:id="@+id/titleET"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@id/titleTV"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:layout_marginStart="75sp"
        android:maxLength="100"
        />
    <TextView
        android:id="@+id/authorTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/authorET"
        app:layout_constraintTop_toBottomOf="@id/titleET"
        android:text="Author: "
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginStart="25sp"
        />

    <EditText
        android:id="@+id/authorET"
        android:layout_width="200dp"
        android:layout_height="50sp"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@id/authorTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleET"
        android:textColor="@color/white"
        android:layout_marginStart="75sp"
        android:maxLength="100"
        />
    <TextView
        android:id="@+id/descriptionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/descriptionET"
        app:layout_constraintTop_toBottomOf="@id/authorET"
        android:text="Description: "
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginStart="10sp"/>
    <EditText
        android:id="@+id/descriptionET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/authorET"
        app:layout_constraintStart_toEndOf="@id/descriptionTV"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:maxLength="1000"
        />
    <Button
        android:id="@+id/addUpdate"
        android:layout_width="300sp"
        android:layout_height="50sp"
        android:text="ADD / Update"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descriptionET"
        android:layout_marginTop="25sp"
        android:backgroundTint="@color/yellow"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dataRV"
        android:layout_width="match_parent"
        android:layout_height="405sp"
        app:layout_constraintTop_toBottomOf="@id/addUpdate"
        android:layout_marginTop="25sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>